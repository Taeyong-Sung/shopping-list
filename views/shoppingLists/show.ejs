<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/shoppingLists/show.css"/>
<%- include('../partials/nav') %>

<h1><%= shoppingList.name %></h1>
<main>
    <a href="/shoppingLists/<%= shoppingList._id %>/new">
        <button  id="addButton">Add to Shopping List</button></a>
    <table id="list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Store</th>
                <th>Category</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <% shoppingList.items.forEach(item => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.store %></td>
                <td><%= item.category %></td>
                <td><%= item.quantity %></td>
                <td>
                    <a id="editButton" href="/shoppingLists/<%= shoppingList._id %>/items/<%= item._id %>/edit">Edit</a>
                </td>
                <td>
                    <form action="/shoppingLists/<%= shoppingList._id %>/items/<%= item._id %>?_method=DELETE" method="POST">
                        <button class="xButton" type="submit">‚ùå</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('../partials/footer') %>