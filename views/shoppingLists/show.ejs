<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/shoppingLists/show.css"/>
<%- include('../partials/nav') %>

<h1>Shopping List</h1>
<h2><%= shoppingList.name %></h2>
<main>
    <table id="list">.
        <thead>
            <tr>
                <th>Name</th>
                <th>Store</th>
                <th>Category</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <% shoppingList.items.forEach(item => { %>
            <tr>
                    <td><%= item.name %></td>
                    <td><%= item.store %></td>
                    <td><%= item.category %></td>
                    <td><%= item.quantity %></td>
                    <td>
                        <a href="/shoppingLists/<%= shoppingList._id %>/items/<%= item._id %>/edit">Edit</a>
                    </td>
                    <td>
                        <form action="/shoppingLists/<%= shoppingList._id %>/items/<%= item._id %>?_method=DELETE" method="POST">
                            <button class="btn" type="submit">‚ùå</button>
                        </form>
                    </td>
            </tr>
            <% }) %>
        </tbody>
    </h2>
    </a>
    </table>
    <a href="/shoppingLists/<%= shoppingList._id %>/new">
        <button>Add to Shopping List</button>
</main>
<%- include('../partials/footer') %>


