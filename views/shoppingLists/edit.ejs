<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/shoppingLists/edit.css"/>
<%- include('../partials/nav') %>

<h1>Edit Shopping List</h1>
<h2>
    <form action="/shoppingLists/<%= shoppingList._id %>/items/<%= item._id %>?_method=PUT" method="POST">
        <label>
            Name:
        <input 
            value="<%= item.name %>"
            type="text" 
            name="name"
        />
        </label><br>
        <label>
            Store:
        <input 
            value="<%= item.store %>"
            type="text" 
            name="store" 
        />
        </label><br>
        <label>
            Category:
        <input 
            value="<%= item.category %>"
            type="text"
            name="category" 
        />
        </label><br>
        <label for="quantity-select">Quantity:</label>
        <select 
        name="quantity" 
        id="quantity-select"
        >
        <option value="<%= item.quantity %>"><%= item.quantity %></option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        </select><br>
        <button id='button' type="submit">Done Edit</button>
    </form>
</h2>


<%- include('../partials/footer') %>
