<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/users/show.css"/>
<%- include('../partials/nav') %>

<h1>Add a Shopping List</h1>
<h2>
    <div>
    <form id="addForm" action="/shoppingLists" method="POST">
        <input type="text"
        name="name"
        >
        <button id="button" type="submit">Add a Shopping List</button>
    </form>
    </div>
</h2>
<main>
    <h2>
        <div class="card-container">
            <% selectedUser.shoppingLists.forEach(shoppingList => { %>
                <div class="card">
                    <div class="card-text">
                        <a href="/shoppingLists/<%= shoppingList._id %>"><%= shoppingList.name %></a><br>
                    </div>
                    <div class="card-button">
                        <form action="/shoppingLists/<%= shoppingList._id %>?_method=DELETE" method="POST">
                                    <button id="button">‚ùå</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>   
    </h2>
</main>
